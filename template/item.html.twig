{% extends "main.html.twig" %}

{% block breadcrumb %}
    {% include "breadcrumb.html.twig" %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="columns">
            <div class="wrapper-item">
                <div class="title-item align-center"><h3>{{ annonce.titre | raw }}</h3></div>
                <div class="ilovetowrap">
                    <div class="item-container align-center">
                        <div class="img-container" id="main-img">
                            <img id="main_img" src="{{ photo.first.url_photo }}" alt="" title=""/>
                        </div>
                        <div class="item-min">
                            {% for p in photo %}
                            <img class="min_img" src="{{ p.url_photo }}" alt="" title=""/>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="table-contact">
                        <div class="hg-table-container">
                            <table class="hg-table">
                                <tbody>
                                <tr>
                                    <td>Prix</td>
                                    <td class="price">{{ annonce.prix }} â‚¬</td>
                                </tr>
                                <tr>
                                    <td>Ville</td>
                                    <td>{{ annonce.ville | raw }}</td>
                                </tr>
                                <tr>
                                    <td>Departement</td>
                                    <td>{{ dep }}</td>
                                </tr>
                                <tr>
                                    <td>Annonceur</td>
                                    <td><a href="{{ chemin }}/annonceur/{{ annonceur.id_annonceur }}">{{ annonceur.nom_annonceur }}</a></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="contact align-center">
                            <div class="tocontact">
                                <p>Contacter <br/>l'annonceur</p>
                            </div>
                            <a href="mailto:{{ annonceur.email }}"><img src="../img/email2.png" alt="email" title="Contacter l'annonceur"/></a>
                        </div>
                        <div class="columns modify sm-hide-only align-center">
                            <div class="tomodify">
                                <p>Modifier/Supprimer <br/>l'annonce</p>
                            </div>
                            <div class="align-center">
                                <a href="{{ chemin }}/del/{{ annonce.id_annonce }}"><img src="../img/bin.png" alt="bin" title="Supprimer"/></a>
                                <a href="{{ chemin }}/item/{{ annonce.id_annonce }}/edit"><img src="../img/edit.png" alt="bin" title="Modifier"/></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row description">
        <div class="columns md-12">
            <h3>Description</h3>

            {{ annonce.description | raw }}
        </div>

    </div>
    <div class="columns manage sm-show align-center">
        <a href="">
            <p>Modifier / Supprimer l'annonce</p>
        </a>
    </div>
    <div id="zoomImg"><div id="zoomClose">x</div><img src="{{ photo.first.url_photo }}" alt=""/></div>
    <script src="../js/annonce.js" id="sln_bar"></script>
{% endblock %}