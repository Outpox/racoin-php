{% extends "main.html.twig" %}

{% block breadcrumb %}
    {% include "breadcrumb.html.twig" %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="columns align-center">
            <h2>Annonces de {{ nom.nom_annonceur }}</h2>
        </div>
    </div>
    <div class="row">
        {% for a in annonces %}
            <div class="columns md-3">
                <article class="item">
                    <a href="{{ chemin }}/item/{{ a.id_annonce }}">
                        <div class="row">
                            <p><em>le {{ a.date }}</em></p>
                        </div>
                        <div class="row">
                            <div class="item-img">
                                <img src="{{ a.url_photo }}" alt=""/>

                                <p class="align-center">{{ a.nb_photo }} photo(s)</p>
                            </div>
                            <div class="item-infos">
                                <h5>{{ a.titre }}</h5>

                                <p><b>Lieu :</b> {{ a.ville }}</p>

                                <p><span class="price">{{ a.prix }}â‚¬ </span></p>
                            </div>
                        </div>
                    </a>
                </article>
            </div>
        {% endfor %}
    </div>

{% endblock %}